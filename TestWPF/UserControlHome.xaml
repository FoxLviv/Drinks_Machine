<UserControl x:Class="TestWPF.UserControlHome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestWPF"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             Height="auto" Width="auto">
    <Grid>
        <materialDesign:TransitioningContent x:Name="TransitioningContentSlide" OpeningEffect="{materialDesign:TransitionEffect SlideInFromLeft, Duration=0:0:0.8}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                <StackPanel>
                    <StackPanel VerticalAlignment="Center" Margin="0 90 0 0" >
                        <TextBlock Text="Insert Your money" FontFamily="Aharoni" Foreground="Green"/>
                    </StackPanel>
                    <TextBox Margin="10" HorizontalAlignment="Center" Width="100"/>
                    <Button FontFamily="Vijaya" FontSize="25" Content="Ok" Margin="0 25 0 0"/>
                </StackPanel>
                <Image Margin="10" Width="200" Height="200" Source="Assets/money.png" Stretch="UniformToFill"/>
            </StackPanel>
        </materialDesign:TransitioningContent>
    </Grid>
</UserControl>
